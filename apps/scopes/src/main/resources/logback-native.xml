<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- Suppress status messages for native image -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <!-- Simplified configuration for native image -->
    <!-- Console appender without color codes (better compatibility) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender with daily rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR:-${user.home}/.local/share/scopes/logs}/scopes.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR:-${user.home}/.local/share/scopes/logs}/scopes.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger configuration -->
    <logger name="io.github.kamiazya.scopes" level="DEBUG"/>
    <logger name="app.cash.sqldelight" level="INFO"/>
    <logger name="org.koin" level="INFO"/>
    <logger name="org.sqlite" level="WARN"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>