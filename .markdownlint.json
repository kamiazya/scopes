{
  "extends": "markdownlint/style/prettier",
  "ignores": [
    ".claude/**",
    "tmp/**"
  ],
  "rules": {
    "MD001": true,
    "MD003": {
      "style": "atx"
    },
    "MD007": {
      "indent": 2
    },
    "MD013": {
      "line_length": 100,
      "code_blocks": false,
      "tables": false
    },
    "MD024": {
      "siblings_only": true
    },
    "MD033": {
      "allowed_elements": ["details", "summary", "sup", "sub"]
    },
    "MD041": false,
    "MD036": false,
    "MD046": {
      "style": "fenced"
    },
    "MD051": false
  }
}
